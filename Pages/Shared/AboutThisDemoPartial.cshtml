                <a class="btn header-button" role="button" href="/dashboard"> Start the use case</a>
            </div>
        </div>
    </div>
</div>


<script>
    function showUseCase(useCaseId) {

        var useCaseToShow = useCaseId;

        // Load the defaul use case
        if (useCaseId === 'Default') {
            useCaseToShow = 'useCase_OnlineRetail';
        }

        // Multiple use cases with one shared demo
        if (useCaseId === "useCase_CA") {
            $("#ca_and_mfa").attr("href", "/SignIn?handler=CA");
            useCaseToShow = "useCase_MFA";
        }
        else if (useCaseId === "useCase_MFA") {
            $("#ca_and_mfa").attr("href", "/SignIn?handler=MFA");
        }

        $(".useCase").hide();
        $("#" + useCaseToShow).show();

        // Telemetry to improve the demo 
        $.get("/SelectUseCase/usecase?id=" + useCaseId.replace('useCase_', '') + "&referral=" + document.referrer, function (data) {

        });
    }

    window.addEventListener("hashchange", function () {
        loaldUseCaseFromUrl();
    });

    var waitForJQuery = setInterval(function () {
        if (typeof $ != 'undefined') {

            clearInterval(waitForJQuery);
            loaldUseCaseFromUrl();
        }
    }, 500);

    function loaldUseCaseFromUrl() {
        var myUrl = new URL(window.location.href.replace(/#/g, "?"));
        var usecase = myUrl.searchParams.get("usecase");

        var useCases = ["PolicyAgreement", "OnlineRetail", "EmailAndPassword", "OBO", "SSO", "MFA", "CA", "ForceSignIn", "UserInsights", "BlockSignUp", "CompanyBranding", "Language", "SSPR", "Social", "TokenAugmentation", "PreAttributeCollection", "PostAttributeCollection", "ProfileEdit", "DeleteAccount", "RBAC", "GBAC", "CustomAttributes", "Kiosk", "Finance"];

        if (usecase && (useCases.indexOf(usecase) > -1)) {

            $("#offcanvasRight").offcanvas('show');
            showUseCase("useCase_" + usecase);
        }
        else {
            $("#offcanvasRight").offcanvas('hide');
            window.location.hash = '';
        }
    }

    const myOffcanvas = document.getElementById('offcanvasRight');
    myOffcanvas.addEventListener('hidden.bs.offcanvas', () => {
        window.location.hash = '';
    }) 
</script>